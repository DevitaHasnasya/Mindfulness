<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F8"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOGA FLOW"
                android:textColor="#005C88"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#005C88"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <VideoView
            android:id="@+id/videoViewYoga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPoseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pose 1: Warming Up"
        android:textColor="#005C88"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a pose below to switch video:"
        android:textColor="#808080"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Start"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#005C88"/>

            <Button
                android:id="@+id/btnPose2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#90A4AE"
                android:text="2. Stretch" />

            <Button
                android:id="@+id/btnPose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Cobra"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#90A4AE"/>

            <Button
                android:id="@+id/btnPose4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#90A4AE"
                android:text="4. Tree" />

            <Button
                android:id="@+id/btnPose5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Warrior"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#90A4AE"/>

            <Button
                android:id="@+id/btnPose6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Child"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#90A4AE"/>

            <Button
                android:id="@+id/btnPose7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Plank"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#90A4AE"/>

            <Button
                android:id="@+id/btnPose8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8. Relax"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#90A4AE"/>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>